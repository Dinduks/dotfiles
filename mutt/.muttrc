alias Samy Dindane samy.dindane@carbon-it.com

set editor="vim -c 'set spell spelllang=en,fr'"
set from="samy@dindane.com"
set folder="imaps://imap-dinduks.alwaysdata.net:993/"
set imap_check_subscribed
set imap_user="samy@dindane.com"
set message_cachedir=~/.mutt/cache/messages
set postponed="=Drafts"
set record="=Sent"
set realname="Samy Dindane"
set sidebar_sort=yes
set sleep_time = 0
set smart_wrap
set smtp_url="smtp://samy@dindane.com@smtp-dinduks.alwaysdata.net:587/"
set sort=threads
set sort_aux=last-date-received
set sort_re
set spoolfile="imaps://imap-dinduks.alwaysdata.net:993/INBOX"
set ssl_force_tls=yes
set trash="=Trash"

bind index "^" imap-fetch-mail
bind index,pager \CB sidebar-prev
bind index,pager \CF sidebar-next
bind index,pager \CO sidebar-open
bind pager <up> previous-line
bind pager <down> next-line

macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=Archive<enter>" "Go to all mail"
macro index gd "<change-folder>=Drafts<enter>" "Go to drafts"
macro index,pager y "<save-message>=Archive<enter><enter>" "Archive"

source ~/.mutt/nongeekshandbook.colors
