xft*antialias:        true
xft*hinting:          full

URxvt.depth         : 32
URxvt.externalBorder: 0
URxvt.font          : xft:Bitstream Vera Sans Mono:size=8
URxvt.internalBorder: 2
URxvt.saveLines     : 9000
URxvt.scrollBar     : false
URxvt.shading       : 30
URxvt.transparent   : true
URxvt.utf8          : true
URxvt.urlLauncher   : iceweasel
URxvt.cursorBlink   : true

urxvt.foreground: #707070
urxvt.background: #fafafa
urxvt.cursorColor: #e4e4e4
urxvt.color0: #d3d3d3
urxvt.color1: #ff807a
urxvt.color2: #b4c158
urxvt.color3: #f59335
urxvt.color4: #bbdbe2
urxvt.color5: #fec7cd
urxvt.color6: #95c1c0
urxvt.color7: #707070
urxvt.color9: #ff605a
urxvt.color10: #94c138
urxvt.color11: #f59335
urxvt.color12: #9bbbe2
urxvt.color13: #d2a4b4
urxvt.color14: #75A1A0
urxvt.color15: #909090

URxvt.perl-ext-common: font-size,keyboard-select,clipboard,url-select

URxvt.keysym.C-minus: perl:font-size:decrease
URxvt.keysym.C-equal: perl:font-size:increase
URxvt.font-size.step: 1

URxvt.keysym.M-s: perl:keyboard-select:activate
URxvt.keysym.M-r: perl:keyboard-select:search

URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard

URxvt.keysym.M-u: perl:url-select:select_next
